{
  "name": "video-speed-controller",
  "version": "0.8.0",
  "description": "Speed up, slow down, advance and rewind HTML5 audio/video with shortcuts",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.mjs",
    "dev": "node scripts/build.mjs --watch",
    "prebuild": "rimraf dist",
    "test": "npm run build && npm run test:unit",
    "test:unit": "node tests/run-tests.js unit",
    "test:integration": "node tests/run-tests.js integration",
    "test:e2e": "npm run build && node tests/e2e/run-e2e.js",
    "test:browser": "echo 'Open tests/fixtures/test-page.html in browser'",
    "serve": "python3 -m http.server 8000",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write src/**/*.js tests/**/*.js",
    "zip": "npm run build && cd dist && zip -r videospeed.zip . && cd .. && echo 'Extension packaged at dist/videospeed.zip'"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.0",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "@trivago/prettier-plugin-sort-imports": "*",
    "@types/chrome": "*",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@vitejs/plugin-react": "*",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.0.50",
    "esbuild": "^0.25.9",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-react-refresh": "*",
    "fs-extra": "^11.3.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "postcss-prefix-selector": "^2.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "*",
    "puppeteer": "^24.16.2",
    "rimraf": "^6.0.1",
    "sass": "^1.90.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-eslint": "*"
  },
  "keywords": [
    "video",
    "speed",
    "utils"
  ],
  "author": "Farzad Majidfayyaz",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": "error",
      "curly": "error",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 130
  }
}

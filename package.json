{
  "name": "video-speed-controller",
  "version": "0.8.0",
  "description": "Speed up, slow down, advance and rewind HTML5 audio/video with shortcuts",
  "type": "module",
  "scripts": {
    "build": "node scripts/build.mjs",
    "dev": "node scripts/build.mjs --watch",
    "prebuild": "rm -rf dist",
    "test": "npm run build && npm run test:unit",
    "test:unit": "node tests/run-tests.js unit",
    "test:integration": "node tests/run-tests.js integration",
    "test:e2e": "npm run build && node tests/e2e/run-e2e.js",
    "test:browser": "echo 'Open tests/fixtures/test-page.html in browser'",
    "serve": "python3 -m http.server 8000",
    "lint": "eslint src/**/*.js tests/**/*.js",
    "lint:fix": "eslint src/**/*.js tests/**/*.js --fix",
    "format": "prettier --write src/**/*.js tests/**/*.js",
    "zip": "npm run build && rm -rf dist/videospeed.zip && mkdir -p dist/videospeed && cp -r manifest.json dist/*.js src/styles src/assets src/ui/popup src/ui/options *.md dist/videospeed/ && cd dist && zip -r videospeed.zip videospeed && cd .. && echo 'Extension packaged at dist/videospeed.zip'"
  },
  "dependencies": {
    "lodash": "^4.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^5.0.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@eslint/compat": "^1.0.0",
    "@eslint/eslintrc": "^3.0.0",
    "@eslint/js": "^9.0.0",
    "@thedutchcoder/postcss-rem-to-px": "^0.0.2",
    "@trivago/prettier-plugin-sort-imports": "*",
    "@types/chrome": "*",
    "@types/lodash": "^4.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "@vitejs/plugin-react": "*",
    "autoprefixer": "^10.0.0",
    "daisyui": "^4.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.57.1",
    "eslint-config-react-app": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks": "*",
    "eslint-plugin-react-refresh": "*",
    "globals": "^15.0.0",
    "jsdom": "^23.0.0",
    "postcss": "^8.0.0",
    "postcss-prefix-selector": "^1.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "*",
    "puppeteer": "^24.10.2",
    "sass": "^1.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-eslint": "*"
  },
  "keywords": [
    "video",
    "speed",
    "utils"
  ],
  "author": "Farzad Majidfayyaz",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "node": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error",
      "eqeqeq": "error",
      "curly": "error",
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
